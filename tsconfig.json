{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./app/*"],
      "@common/*": ["./app/components/common/*"],
      "@home/*": ["./app/components/_home/*"],
      "@about/*": ["./app/components/_about/*"],
      "@blog/*": ["./app/components/_blog/*"],
      "@gpt/*": ["./app/components/_gpt/*"],
      "@mypage/*": ["./app/components/_mypage/*"],
      "@hot-place/*": ["./app/components/_hot-place/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
